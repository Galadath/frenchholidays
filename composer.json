{
    "require": {
        "php": ">=5.5.0",
        "silex/silex": "1.x"
    },
    "config": {
        "vendor-dir": "composer"
    },
    "require-dev": {
        "sebastian/phpcpd": "dev-master",
        "squizlabs/php_codesniffer": "dev-master",
        "phpmd/phpmd": "dev-master",
        "phploc/phploc": "dev-master"
    },
    "autoload": {
        "files": [
            "lib/get_easter_datetime.php",
            "lib/get_french_holidays_dates.php"
        ]
    },
    "extra": {
        "heroku": {
            "document-root": "public",
            "index-document": "index.php"
        },
        "newrelic": true
    }
}
