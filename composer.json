{
    "require": {
        "php": ">=5.5.0"
    },
    "config": {
        "vendor-dir": "composer"
    },
    "extra": {
        "heroku": {
            "document-root": "public",
            "index-document": "index.php"
        },
        "php-config": [
            "display_errors=off",
            "short_open_tag=off",
            "date.timezone=Europe/Paris"
        ],
        "newrelic": true
    }
}
